<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="NewGameDialogController">
   <children>
      <VBox prefHeight="300.0" prefWidth="300.0" spacing="10.0" AnchorPane.bottomAnchor="75.0" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="25.0">
         <children>
            <Label prefHeight="50.0" prefWidth="400.0" style="-fx-alignment: center;" text="New Game">
               <font>
                  <Font name="Calibri Bold" size="40.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
            </Label>
            <Label text="Minutes per side" />
            <Slider max="180.0" minorTickCount="1" snapToTicks="true" value="5.0">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin></Slider>
            <Label layoutX="40.0" layoutY="80.0" text="Increment in seconds" />
            <Slider layoutX="40.0" layoutY="107.0" max="180.0" min="1.0" minorTickCount="1" snapToTicks="true" value="10.0">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin></Slider>
            <HBox spacing="20.0">
               <children>
                  <RadioButton mnemonicParsing="false" selected="true" text="White">
                     <toggleGroup>
                        <ToggleGroup fx:id="pieceColor" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton mnemonicParsing="false" text="Black" toggleGroup="$pieceColor" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </HBox>
            <Button alignment="CENTER_RIGHT" mnemonicParsing="false" text="Start" />
         </children>
         <padding>
            <Insets left="30.0" right="30.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
